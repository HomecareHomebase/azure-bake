{
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "publish": {
      "conventionalCommits": "true",
      "ignoreChanges": [
        "ignored-file",
        "*.md",
        "*.yaml",
        "*.yml"
      ],
      "message": "chore(release): publish",
      "verifyAccess": false
    }
  },
  "packages": [
    "core",
    "arm-helper",
    "ingredient/*",
    "system"
  ]
}
